extends layout

block content
    .container.mt-5
        h1 Register
        if errors && errors.length > 0
            each error in errors
                .alert.alert-danger(role='alert') #{error.msg}
        form(method='post', action='/users/register', enctype='multipart/form-data')
            .form-group
                label(for='name') Name
                input.form-control(name='name', type='text', placeholder='Enter your name', id='name', required='true', value=(undefined !== name ? name : ''))
            .form-group
                label(for='contact') Contact-Number
                input.form-control(name='contact', type='number', placeholder='Enter your contact number', id='contact', required='true', value=(undefined !== contact ? contact : ''))
            .form-group
                label(for='email') Email
                input.form-control(name='email', type='email', placeholder='Enter your email', id='email', required='true', value=(undefined !== email ? email : ''))
            .form-group
                label(for='username') Username
                input.form-control(name='username', type='text', placeholder='Enter your username', id='username', required='true', value=(undefined !== username ? username : ''))
            .form-group
                label(for='password') Password
                input.form-control(name='password', type='password', placeholder='Enter your password', id='password', required='true')
            .form-group
                label(for='cpassword') Confirm Password
                input.form-control(name='cpassword', type='password', placeholder='Confirm password', id='cpassword', required='true')
            .form-group
                label(for='profile') Profile Image
                input.form-control(name='profile', type='file', id='profile', required='true')
            button.btn.btn-primary(type='submit') Register
